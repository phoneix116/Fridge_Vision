# Fridge Vision Configuration
# Copy to .env and modify as needed

# Model Configuration
MODEL_NAME=yolov5s
CONF_THRESHOLD=0.5
IOU_THRESHOLD=0.45
DEVICE=auto  # 'cpu', 'cuda', or 'auto'

# OCR Configuration
OCR_LANGUAGES=en
OCR_USE_GPU=false
OCR_CONF_THRESHOLD=0.3

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false
RELOAD=false
WORKERS=1

# Recipe Configuration
DEFAULT_TOP_K=5
MIN_MATCH=1

# Image Processing
IMAGE_MAX_SIZE=640
MAX_FILE_SIZE_MB=50

# Logging
LOG_LEVEL=INFO

# Feature Flags
ENABLE_OCR=true
ENABLE_QUANTITY_ESTIMATION=true
ENABLE_RECIPE_RECOMMENDATIONS=true
